 Pares

package main
import "fmt"
func main() {
var N, quadrado float64
fmt.Print("Digite um número entre 5 e 2000: ")
fmt.Scan(&N)
if N < 5 || N >= 2000 {
fmt.Println("Número fora do intervalo permitido!")
} else {
for N >= 5 {
if int(N) % 2 == 0 {
quadrado = N * N
fmt.Printf("%.0f ^ 2 = %.0f\n", N, quadrado)
}
N--
}
}
}
