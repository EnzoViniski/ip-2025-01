 Segundos

package main
import "fmt"
func main() {
var H, M, S, soma float64
fmt.Print("Digite as horas: ")
fmt.Scan(&H)
fmt.Print("Digite os minutos: ")
fmt.Scan(&M)
fmt.Print("Digite os segundos: ")
fmt.Scan(&S)
soma = (H * 3600) + (M * 60) + S
fmt.Printf("O TEMPO EM SEGUNDOS E = %.0f\n", soma)
}
