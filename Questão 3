algoritmo "Concatecação"

var
n1, n2, n3:real
multi, multi2, multi3, soma, quadrado:real

inicio
//Entrada de dados
escreva("Digite o primeiro número: ")
leia(n1)

escreva("Digite o segundo número: ")
leia(n2)

escreva("Digite o terceiro número: ")
leia(n3)

//Operações
multi <- n1 * 100
multi2 <- n2 * 10
multi3 <- n3 * 1
soma <- multi + multi2 + multi3
quadrado <- soma ^ 2

//Saída de dados
se ( n1^2 < 100 ) e ( n2^2 < 100 ) e ( n3^2 < 100 ) entao
escreval("A concatenação será: " , soma)
escreva("O quadrado dela será: ", quadrado)
senao
escreva("DÍGITO INVALIDO")
fimse
fimalgoritmo
