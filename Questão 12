Algoritmo "Charrete"

var
n1, multi, divi: real

inicio
//Entrada de dados
escreva("Digite o total de horas de uso: ")
leia(n1)
divi <- n1 % 3

//SaÃ­da de dados
se (n1 < 3) entao
multi <- n1 * 5
escreva("O VALOR A PAGAR E = ", multi)
senao
se divi > 0 entao
multi <- (((n1 - divi + 3) / 3)) * 10
escreva("O VALOR A PAGAR E = ", multi)
senao
multi <- (n1 / 3) * 10
escreva("O VALOR A PAGAR E = ", multi)
fimse
fimse
fimalgoritmo
